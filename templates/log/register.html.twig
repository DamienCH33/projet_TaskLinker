{% extends 'log/base-logout.html.twig' %}

{% block title %}Bienvenue sur - TaskLinker
{% endblock %}

{% block body %}
	<h1>S'inscrire</h1>

	{{ form_start(form) }}
	{{ form_row(form.lastname) }}
	{{ form_row(form.firstname) }}
	{{ form_row(form.email) }}
	<div class="form-flex">
		{{ form_row(form.password.first) }}
		{{ form_row(form.password.second) }}
	</div>
	<button class="button button-submit">Continuer</button>
	<a href="{{ path('app_login') }}" class="link-logout">Vous avez déjà un compte ?</a>
	{{ form_end(form) }}
{% endblock %}
