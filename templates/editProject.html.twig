{% extends 'base.html.twig' %}

{% block title %}
    {{ project.title }}
	-
	{{ parent() }} - TaskLinker
{% endblock %}

{% block header %}

    <header>
        <div id="current-user"></div>
        <div id="title-page">
            <h1>{{ project.title }}</h1>
        </div>
    </header>
{% endblock %}

{% block body %}
<div id="content">
			<section id="add">
				<a href="{{ path('app_home') }}">‚Üê Retour</a>

				{{ form_start(form, {'attr': {'name': 'project'}}) }}

				<div>
					<label for="{{ form.title.vars.id }}" class="required">Titre du projet</label>
					{{ form_widget(form.title, {'attr': {'id': form.title.vars.id, 'required': true}}) }}
				</div>

				<div class="input">
                    <label for="{{ form.employees.vars.id }}">Inviter des membres</label>
                    {{ form_widget(form.employees) }}
                </div>
				<br>

				<button class="button button-submit">Modifier</button>

				{{ form_end(form) }}
			</section>
		</div>
{% endblock %}
